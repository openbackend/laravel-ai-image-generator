# AI Image Generator Configuration

# Default provider to use
AI_IMAGE_DEFAULT_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_IMAGE_MODEL=dall-e-3

# Stability AI Configuration
STABILITY_API_KEY=your_stability_api_key_here
STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0

# Midjourney Configuration (if using a third-party service)
MIDJOURNEY_API_KEY=your_midjourney_api_key_here
MIDJOURNEY_API_URL=your_midjourney_api_url_here

# Storage Configuration
AI_IMAGE_STORAGE_DISK=public
AI_IMAGE_STORAGE_PATH=ai-generated-images
AI_IMAGE_AUTO_DOWNLOAD=true
AI_IMAGE_CLEANUP_TEMP=true

# Database Configuration
AI_IMAGE_DB_ENABLED=true
AI_IMAGE_DB_TABLE=ai_generated_images
AI_IMAGE_STORE_PROMPTS=true
AI_IMAGE_STORE_METADATA=true

# Rate Limiting
AI_IMAGE_RATE_LIMITING=true
AI_IMAGE_REQUESTS_PER_MINUTE=5
AI_IMAGE_REQUESTS_PER_HOUR=50

# Image Processing
AI_IMAGE_PROCESSING_ENABLED=true
AI_IMAGE_AUTO_OPTIMIZE=true
AI_IMAGE_MAX_FILE_SIZE=10240

# Security & Validation
AI_IMAGE_CONTENT_FILTER=true
AI_IMAGE_PROMPT_VALIDATION=true
AI_IMAGE_MAX_PROMPT_LENGTH=1000

# Logging
AI_IMAGE_LOGGING_ENABLED=true
AI_IMAGE_LOG_REQUESTS=true
AI_IMAGE_LOG_RESPONSES=false
AI_IMAGE_LOG_ERRORS=true
AI_IMAGE_LOG_CHANNEL=daily

# Cache
AI_IMAGE_CACHE_ENABLED=true
AI_IMAGE_CACHE_TTL=3600
AI_IMAGE_CACHE_STORE=file
AI_IMAGE_CACHE_PREFIX=ai_image_
